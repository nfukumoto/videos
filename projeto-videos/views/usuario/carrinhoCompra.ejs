<%- include('../partials/usuario/header.ejs') %>
<%- include('../partials/usuario/nav.ejs') %>

        <section class="container-fluid" style="margin: top 80px;">
            <h1 id="tituloPagina" class="alert text-center" style="background-color:#E0D1FA ;"><b>Meu Carrinho de Compras</b></h1>
            <article class="container-fluid mt-4 row mx-auto" style="border: 1px solid #ccc; border-radius: 12px">

                <div id="carrinho" class="row col-sm-8 mb-3">
                    <div class="container">
                        <div id="produtosAdquiridos">
                            <div class="row mt-4 text-center">
                                <div class="col-sm-6">
                                    <h3 class="text-dark">Produto(s)</h3>
                                </div>
                                <div class="col-sm-2">
                                    <h3 class="text-dark">Tela(s)</h3>
                                </div>
                                <div class="col-sm-2">
                                    <h3 class="text-dark">Pre√ßo</h3>
                                </div>
                                <div class="col-sm-2">
                                    <h3 class="text-dark">Excluir</h3>
                                </div>
                            </div><hr>
                            <% 
                                var total=0
                                var telas_t=0
                                item.forEach((n) => {
                                total += n.valor_fi
                                telas_t += n.qtdTelas_ca
                            %>
                            <div class="row mb-2" id="car<%=n.carrinho_id %>">
                                <div class="col-sm-6 mt-2"><p><%=n.titulo_fi%></p></div>
                                <div class="col-sm-2 mt-2 text-center"><p><%=n.qtdTelas_ca%></p></div>
                                <div class="col-sm-2 mt-2 text-right"><p>R$ <%=n.valor_fi.toFixed(2).toString().replace(".",",")%></p></div>
                                <div class="col-sm-2">
                                    <a class="btn btn-light" href="/deleteProdutoCarrinho/<%=n.carrinhos_id%>" ><img src="/public/imagens/lixeira.png" class="w-25"></a>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <form class="form-group p-3 mt-4 ml-4" style="border: 1px solid #ccc; border-radius: 12px">
                        <fieldset>
                            <div id="resumoCompra"></div>
                            <p class="mt-1 font-weight-bold">Tem <%=telas_t%> produto(s) no meu carrinho.</p>
                            <p class="mt-1 font-weight-bold">Total: R$ <%=(total.toFixed(2)).toString().replace(".",",")%></p>
                            <div class="row">
                                <input type="number" id="cupom" class="w-100 form-control col-sm-7 mx-auto" placeholder="Cupom de Desconto">
                                <button type="button" class="btn btn-info col-sm-3 mx-auto" id="btnCupom">Validar</button>
                            </div>
                            <div class="mt-5 text-white">
                                <button class="w-100 btn btn-danger">Continuar</button>
                            </div>
                            <div class="text-center">
                                <a href="/Produtos">Adicionar mais produtos</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
                    
            </article>
<!--             <article>
                <div id="produtos" class="row mt-5">
                </div>
            </article> -->
        </section>
    <script src="../js/carrinhoCompra.js"></script>

<%- include('../partials/usuario/footer.ejs') %>